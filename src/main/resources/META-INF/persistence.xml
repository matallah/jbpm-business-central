<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             version="2.2">
    <persistence-unit name="auditPU" transaction-type="JTA">
        <jta-data-source>java:jboss/datasources/jBPMDS</jta-data-source>
        <class>com.guh.audit.entities.JbpmModule</class>
        <class>com.guh.audit.entities.JbpmAffectedModule</class>
        <class>com.guh.audit.entities.JbpmAuditTrail</class>
        <class>com.guh.audit.entities.SecurityPermissionChangedValue</class>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.cache.use_second_level_cache" value="false"/>
            <property name="hibernate.cache.use_query_cache" value="false"/>
            <property name="hibernate.cache.region.factory_class" value="org.hibernate.cache.infinispan.JndiInfinispanRegionFactory"/>
            <property name="hibernate.cache.infinispan.cachemanager" value="java:jboss/infinispan/container/hibernate"/>
        </properties>
    </persistence-unit>
</persistence>